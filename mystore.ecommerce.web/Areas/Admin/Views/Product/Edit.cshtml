@model mystore.ecommerce.entities.Models.ProductModel
@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}

<div class="col-md-12">
    <h2>Edit Product</h2>
    <div class="">
        <div asp-validation-summary="All"></div>
        <form method="post" enctype="multipart/form-data" asp-controller="Product" asp-action="Edit">

            <div asp-validation-summary="ModelOnly"> </div>
            <input asp-for="Id" type="hidden" class="form-control" />
            <div class="form-group">
                <label asp-for="ProductName">Product Name:</label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName"></span>
            </div>

            <div class="form-group">
                <label asp-for="Category">Category:</label>
                <select asp-for="Category" asp-items="@(new SelectList(ViewBag.Categories,"Id","CategoryName"))" class="form-control"></select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Size">Short description:</label>
                <input type="text" asp-for="Size" class="form-control" />
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price">Price (LKR):</label>
                <input type="text" asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="OutOfStock">Out of Stock:</label>
                <input type="checkbox" asp-for="OutOfStock" />
                <span asp-validation-for="OutOfStock" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Status">Is Active:</label>
                <input type="checkbox" asp-for="Status" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group mt-3 mb-3">
                <label asp-for="ImageName">Product Image:</label>
                <input asp-for="ImageName" type="text" readonly />
                <input type="file" name="postedFile" />
                <br />

            </div>
            <input asp-for="CreatedBy" hidden />
            <input asp-for="CreatedDate" hidden />

            <div class="form-group">
                <button type="submit" class="btn btn-primary" asp-action="Edit"> Save</button>
                <a asp-action="Index" class="btn btn-secondary">Back</a>
            </div>
        </form>
    </div>
</div>
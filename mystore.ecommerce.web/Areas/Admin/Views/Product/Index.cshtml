@model IList<mystore.ecommerce.entities.Models.ProductModel>
@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}

<div class="row mt-3">
    <div class="col-10"><h3 class="">All Products</h3></div>
    <div class="col-2"><a asp-action="Add" asp-controller="Product" class="btn btn-primary right">Add Product</a></div>
</div>

@{
    if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible mt-2" role="alert">
            <span type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></span>
            @TempData["Message"]
        </div>
    }
}

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Product Name</th>
            <th scope="col">Category</th>
            <th scope="col">Size</th>
            <th scope="col">Price (LKR)</th>
            <th scope="col">Out of stock</th>
            <th scope="col">Is Active</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.Category</td>
                <td>@item.Size</td>
                <td>@item.Price</td>
                <td>@item.OutOfStock</td>
                <td>@item.Status</td>
                <td><a asp-area="Admin" asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id">Edit</a></td>
            </tr>
        }


    </tbody>
</table>